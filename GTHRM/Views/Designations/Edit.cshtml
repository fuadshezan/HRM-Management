@model GTHRM.Models.Designation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Designation</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DesigId" />
            <input type="hidden" asp-for="ComId" />
            
            <div class="form-group">
                <label asp-for="DesigName" class="control-label"></label>
                <input asp-for="DesigName" class="form-control" />
                <span asp-validation-for="DesigName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

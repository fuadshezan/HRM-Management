@model GTHRM.Models.Shift

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Shift</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="ShiftName" class="control-label"></label>
                <input asp-for="ShiftName" class="form-control" />
                <span asp-validation-for="ShiftName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftIn" class="control-label"></label>
                <input asp-for="ShiftIn" class="form-control" />
                <span asp-validation-for="ShiftIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftOut" class="control-label"></label>
                <input asp-for="ShiftOut" class="form-control" />
                <span asp-validation-for="ShiftOut" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="ShiftLate" class="control-label"></label>
                <input asp-for="ShiftLate" class="form-control" />
                <span asp-validation-for="ShiftLate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="ShiftLate" class="control-label"></label>
                <input type="time" id="ShiftLate" asp-for="ShiftLate" class="form-control" />
                <span asp-validation-for="ShiftLate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Preserve leading zero in time input
        document.getElementById("ShiftLate").addEventListener("input", function () {
            console.log("Function hit!");
            var timeInput = this;
            var timeValue = timeInput.value;
            console.log(timeValue);
            var timeParts = timeValue.split(":");
            if (timeParts.length === 2) {
                var hours = timeParts[0];
                var minutes = timeParts[1];
                if (hours.length === 1) {
                    hours = "0" + hours;
                }
                timeInput.value = hours + ":" + minutes;
            }
        });
    </script>
}
